{
  "extends": ["./base.js"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {},
  "overrides": [
    {
      "files": ["**/*.mjs"],
      "parserOptions": { "sourceType": "module" }
    },
    {
      "files": ["**/*.cjs"],
      "parserOptions": { "sourceType": "script" }
    }
  ]
}
